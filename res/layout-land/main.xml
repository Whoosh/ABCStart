<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" android:id="@+id/mainLayout" android:background="@drawable/background">
    <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/User_name"
            android:ems="10"
            android:id="@+id/nameEditText" android:editable="false"
            android:textColor="@android:color/secondary_text_light"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditText" android:editable="false" android:text="@string/Random_password"
            android:textColor="@android:color/secondary_text_light"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center">
        <CheckBox
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:text="@string/Remember_me"
                android:id="@+id/rememberMeCheckBox"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text="@string/Enter"
                android:id="@+id/enterButton" android:singleLine="false"/>
    </LinearLayout>
</LinearLayout>
